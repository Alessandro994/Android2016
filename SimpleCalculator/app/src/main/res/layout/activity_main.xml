<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alessandro.simplecalculator.MainActivity">

    <EditText
        android:id="@+id/first_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/first_number" />

    <EditText
        android:id="@+id/second_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:hint="@string/second_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result"
        android:id="@+id/textView"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/second_number"
        android:layout_alignLeft="@+id/second_number"
        android:layout_alignStart="@+id/second_number" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:onClick="evaluateSum"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="48dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/difference"
            android:onClick="evaluateDifference"
            android:layout_alignBottom="@+id/plus"
            android:layout_toRightOf="@+id/plus"
            android:layout_toEndOf="@+id/plus"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:id="@+id/multiply"
            android:onClick="evaluateProduct"
            android:layout_below="@+id/plus"
            android:layout_toLeftOf="@+id/difference"
            android:layout_toStartOf="@+id/difference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รท"
            android:id="@+id/divide"
            android:onClick="evaluateDivision"
            android:layout_alignBottom="@+id/multiply"
            android:layout_alignLeft="@+id/difference"
            android:layout_alignStart="@+id/difference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/result"
            android:onClick="showResult"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/difference"
            android:layout_toStartOf="@+id/difference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clear"
            android:onClick="clearFields"
            android:layout_alignBottom="@+id/result"
            android:layout_alignLeft="@+id/divide"
            android:layout_alignStart="@+id/divide" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignRight="@+id/second_number"
        android:layout_alignEnd="@+id/second_number" />


</RelativeLayout>
